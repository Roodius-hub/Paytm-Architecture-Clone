{
    "extends": "@repo/typescript-config/react-library.json",
    "compilerOptions": {
      "outDir": "dist",
      "module": "ESNext",
      "moduleResolution": "node",
      "target": "ES2023",
      "strict": true,
      "esModuleInterop": true,
      "ignoreDeprecations": "6.0"
    },
    "paths": {
      "@repo/db/*": ["packages/db/src/*"],
      "@repo/db": ["packages/db/src/index.ts"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
